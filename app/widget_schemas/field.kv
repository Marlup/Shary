# --- field.kv ---
#:kivy 2.3.0

<FieldScreen>:
    name: "field"
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)

        MDTopAppBar:
            title: "Fields Management"
            elevation: 5
            right_action_items: [["account-group", lambda _: root.go_to_users_screen(), "Users List"]]
            left_action_items: [["upload", lambda _: root.go_to_field_visualizer_screen(), "Visualizer Downloaded Field"]]

        MDBoxLayout:
            id: table_container
            size_hint: (0.9, 0.6)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            width: dp(100)

        MDBoxLayout:
            adaptive_height: True
            spacing: dp(10)
            halign: "center"

            MDRaisedButton:
                text: "Send Fields"
                icon: "email"
                # on_release: root.show_send_email_dialog()
                #on_release: root.show_send_to_firebase_dialog()
                on_release: root.show_channel_selection_dialog()

            MDRaisedButton:
                text: "Remove Field"
                icon: "minus"
                on_release: root._delete_fields()

            MDRaisedButton:
                text: "Add Field"
                icon: "plus"
                on_release: root.show_add_field_dialog()
            