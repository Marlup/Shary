# --- views/send_firebase_dialog.kv ---
#:kivy 2.3.0

<SendToFirebaseDialog>:  # Root widget
    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "10dp"

        MDCard:
            size_hint_x: None
            width: "200dp"
            size_hint_y: None
            height: "80dp"
            radius: [20]  # Round edges
            md_bg_color: 0.2, 0.4, 0.8, 0.5  # Blueish with 50% opacity
            elevation: 0.5
            pos_hint: {"center_x": 0.5}

            BoxLayout:
                orientation: "vertical"
                padding: "10dp"
                spacing: "5dp"
                pos_hint: {"center_x": 0.5}

        MDTextField:
            id: session_id
            hint_text: "Session ID"
            size_hint_x: None
            width: "250dp"
            size_hint_y: None
            height: "50dp"
            pos_hint: {"center_x": 0.5}
            mode: "fill"

        MDTextField:
            id: secret_key
            hint_text: "Secret"
            password: True
            size_hint_x: None
            width: "250dp"
            size_hint_y: None
            height: "50dp"
            pos_hint: {"center_x": 0.5}
            mode: "fill"
