# --- views/requests.kv ---
#:kivy 2.3.0

<RequestsScreen>:
    name: "requests"
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)

        MDTopAppBar:
            title: "Requests Management"
            elevation: 5
            right_action_items: [["database", lambda _: root.go_to_fields_screen(), "Fields List"]]
            left_action_items: [["account-group", lambda _: root.go_to_users_screen(), "Users List"]]

        MDBoxLayout:
            id: table_container
            size_hint_y: 0.8

        MDBoxLayout:
            adaptive_height: True
            spacing: dp(10)
            halign: "center"

            MDRaisedButton:
                text: "Remove Request Field"
                icon:"minus"
                on_release: root._delete_req_fields()

            MDRaisedButton:
                text: "Add Request Field"
                icon: "plus"
                on_release: root.show_add_req_field_dialog()