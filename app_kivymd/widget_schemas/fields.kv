# --- fields.kv ---
#:kivy 2.3.0

<FieldsScreen>:
    name: "fields"
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)

        MDTopAppBar:
            title: "Fields Management"
            elevation: 5
            right_action_items: [["account-group", lambda _: root.go_to_users_screen(), "Users List"]]

        MDBoxLayout:
            id: table_container
            size_hint_y: 0.8

        MDBoxLayout:
            adaptive_height: True
            spacing: dp(10)
            halign: "center"

            MDRaisedButton:
                text: "Send Fields"
                icon: "email"
                on_release: root.show_send_email_dialog()

            MDRaisedButton:
                text: "Remove Field"
                icon: "minus"
                on_release: root._delete_fields()

            MDRaisedButton:
                text: "Add Field"
                icon: "plus"
                on_release: root.show_add_field_dialog()
            