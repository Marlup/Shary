# --- views/add_request_dialog.kv ---
#:kivy 2.3.0

<AddRequestField@MDBoxLayout>:
    orientation: "vertical"
    spacing: dp(10)
    padding: dp(20)

    MDTextField:
        id: key_input
        hint_text: "Key"
        helper_text: "Enter the key name for the request field"
        helper_text_mode: "on_focus"

    MDTextField:
        id: other_name_input
        hint_text: "Other Name"
        helper_text: "Enter the other name of the key, if possible"
        helper_text_mode: "on_focus"
