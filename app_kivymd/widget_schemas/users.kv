# --- views/users.kv ---
#:kivy 2.3.0

<UsersScreen>:
    name: "users"
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)

        MDTopAppBar:
            title: "Users Management"
            elevation: 5
            left_action_items: [["database", lambda _: root.go_to_fields_screen(), "Fields List"]]
            right_action_items: [["file-send", lambda _: root.go_to_requests_screen(), "Request"]]

        MDBoxLayout:
            id: table_container  # âœ… Ensure this ID matches the Python reference
            size_hint_y: 0.8

        MDBoxLayout:
            adaptive_height: True
            spacing: dp(10)
            halign: "center"

            MDRaisedButton:
                text: "Remove User"
                icon: "account-minus"
                on_release: root._delete_users()
                
            MDRaisedButton:
                text: "Add User"
                icon: "account-plus"
                on_release: root.show_add_user_dialog()

