# --- views/user_dialog.kv ---
#:kivy 2.3.0

<UserDialog>:
    MDBoxLayout:
        id: user_dialog_layout
        orientation: 'vertical'
        padding: '20dp'

        MDTextField:
            id: username_input
            hint_text: "Username"
            helper_text: "Enter the username!"
            helper_text_mode: "on_focus"

        MDTextField:
            id: email_input
            hint_text: "Email"
            helper_text: "Enter the email!"
            helper_text_mode: "on_focus"
