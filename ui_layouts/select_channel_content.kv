<SelectChannel>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: self.minimum_height
    padding: "10dp"

    BoxLayout:
        spacing: "10dp"
        size_hint_y: None
        height: "60dp"
        pos_hint: {"center_x": 0.5}
        padding: "5dp"

        BoxLayout:
            orientation: "vertical"
            spacing: "10dp"
            size_hint_y: None
            halign: "left"
            height: "60dp"
            pos_hint: {"center_x": 0.5}
            padding: "5dp"

            MDLabel:
                id: selected_channel
                text: "Cloud"
                halign: "left"
                theme_text_color: "Primary"
                font_style: "H6"

        MDRaisedButton:
            text: "Select Channel"
            size_hint_x: 0.3
            icon: "menu"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.get_screen("fields").show_menu(self)

