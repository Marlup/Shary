# --- file_visualizer.kv ---
#:kivy 2.3.0

<FilesVisualizerScreen>:
    name: "files_visualizer"
    
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)

        MDTopAppBar:
            title: "File Visualizer Management"
            elevation: 5
            right_action_items: [["database", lambda _: root.go_to_fields_screen(), "Fields Lists"]]

        MDBoxLayout:
            id: table_container
            size_hint: (0.9, 0.6)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            width: dp(100)

        MDBoxLayout:
            orientation: "horizontal"
            padding: dp(10)
            spacing: dp(25)
            
            MDFloatingActionButton:
                id: menu_button
                icon: "menu"
                #pos_hint: {"right": 1, "top": 1}
                on_release: root.show_menu()
            
            MDRaisedButton:
                id: download_button
                text: "Download data from cloud"
                disabled: True
                on_release: app.firebase_manager.download_data(screen.session_id)

            MDRaisedButton:
                id: delete_button
                text: "Delete data from cloud"
                disabled: True
                on_release: app.firebase_manager.delete_file(screen.session_id)


